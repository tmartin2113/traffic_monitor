# 511.org API Configuration
# Get your API key from: https://511.org/open-data/token
VITE_511_API_KEY=your_511_api_key_here

# API Base URLs
VITE_API_BASE_URL=https://api.511.org
VITE_WZDX_API_URL=https://api.511.org/traffic/wzdx

# API Rate Limiting (requests per hour)
VITE_RATE_LIMIT_MAX_REQUESTS=60
VITE_RATE_LIMIT_WINDOW_MS=3600000

# Polling Configuration (milliseconds)
VITE_POLL_INTERVAL=60000
VITE_CACHE_TTL=30000
VITE_STALE_TIME=30000

# Map Configuration
VITE_MAP_DEFAULT_LAT=37.7749
VITE_MAP_DEFAULT_LNG=-122.4194
VITE_MAP_DEFAULT_ZOOM=10
VITE_MAP_MIN_ZOOM=8
VITE_MAP_MAX_ZOOM=18
VITE_MAP_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png

# Geofence Configuration (Bay Area boundaries)
VITE_GEOFENCE_NORTH=38.0
VITE_GEOFENCE_SOUTH=37.2
VITE_GEOFENCE_EAST=-121.5
VITE_GEOFENCE_WEST=-122.8

# Feature Flags
VITE_ENABLE_WZDX=false
VITE_ENABLE_CLUSTERING=true
VITE_ENABLE_GEOFENCING=true
VITE_ENABLE_NOTIFICATIONS=false
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PWA=false

# Development/Debug Options
VITE_DEBUG=false
VITE_MOCK_API=false
VITE_LOG_LEVEL=error

# Analytics (Optional)
VITE_GA_TRACKING_ID=
VITE_SENTRY_DSN=

# Application Metadata
VITE_APP_VERSION=${npm_package_version}
VITE_APP_NAME=511 Bay Area Traffic Monitor
VITE_APP_DESCRIPTION=Real-time traffic monitoring for the San Francisco Bay Area
