# 511 Bay Area Traffic Monitor - Environment Configuration
# Copy this file to .env and add your actual values

# REQUIRED: 511.org API Configuration
# Get your API key from: https://511.org/open-data/token
VITE_511_API_KEY=your_api_key_here

# API Base URL (default: https://api.511.org)
VITE_API_BASE_URL=https://api.511.org

# Application Configuration
VITE_APP_TITLE=511 Bay Area Traffic Monitor
VITE_APP_VERSION=1.0.0

# Polling and Caching Settings (in milliseconds)
VITE_POLL_INTERVAL=60000  # 60 seconds
VITE_CACHE_TTL=30000       # 30 seconds
VITE_STALE_TIME=60000      # 1 minute

# Rate Limiting
VITE_RATE_LIMIT_MAX_REQUESTS=60    # Max requests per hour
VITE_RATE_LIMIT_WINDOW=3600000     # 1 hour in milliseconds

# Map Configuration
VITE_MAP_DEFAULT_LAT=37.7749       # San Francisco latitude
VITE_MAP_DEFAULT_LNG=-122.4194     # San Francisco longitude
VITE_MAP_DEFAULT_ZOOM=10           # Initial zoom level
VITE_MAP_MIN_ZOOM=8                # Minimum zoom level
VITE_MAP_MAX_ZOOM=18               # Maximum zoom level

# Geofence Boundaries (Bay Area)
VITE_GEOFENCE_NORTH=37.86217361
VITE_GEOFENCE_SOUTH=37.21559028
VITE_GEOFENCE_EAST=-121.66525694
VITE_GEOFENCE_WEST=-122.57031250

# Feature Flags
VITE_ENABLE_WZDX=true              # Enable Work Zone Data Exchange
VITE_ENABLE_CLUSTERING=true        # Enable marker clustering
VITE_ENABLE_GEOFENCING=true        # Enable geofencing
VITE_ENABLE_ANALYTICS=false        # Enable analytics
VITE_ENABLE_DEBUG=false            # Enable debug mode

# Map Tile Provider (optional custom tile server)
# Default uses OpenStreetMap
VITE_MAP_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png
VITE_MAP_TILE_ATTRIBUTION=Â© OpenStreetMap contributors

# Optional: External Services
# Uncomment and configure if using these services

# Sentry Error Tracking
# VITE_SENTRY_DSN=your_sentry_dsn_here
# VITE_SENTRY_ENVIRONMENT=production
# VITE_SENTRY_TRACES_SAMPLE_RATE=0.1

# Google Analytics
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Mapbox (if using Mapbox tiles instead of OpenStreetMap)
# VITE_MAPBOX_ACCESS_TOKEN=your_mapbox_token_here
# VITE_MAPBOX_STYLE_URL=mapbox://styles/mapbox/streets-v11

# Development Settings
VITE_DEV_SERVER_PORT=3000
VITE_DEV_SERVER_HOST=localhost
VITE_DEV_MOCK_DATA=false

# Build Configuration
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_MINIFY=true
VITE_BUILD_LEGACY=false
